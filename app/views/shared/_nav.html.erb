<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
  <h5 class="my-0 mr-md-auto font-weight-normal">Currency Tracker</h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <%= link_to 'Currency List', listing_path, class: "p-2 text-dark" %>
    <% History.currencies.keys.each do |currency| %>
      <%= link_to "#{currency.upcase} History", history_path(currency: currency), class: "p-2 text-dark" %>
    <% end %>
  </nav>
</div>